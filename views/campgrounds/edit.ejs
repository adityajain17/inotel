<% include ../partials/header %>
    <link rel="stylesheet" href="/stylesheets/new.css">
    <div class="con">
        <div style="width: 25%; margin: 25px auto;" class="form-con">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <h1 style="text-align: center">Edit <%=campground.name%></h1><br>
                <input class="" type="text" name="campground[name]" placeholder="name" value="<%=campground.name%>"><br>
                <input class="" type="text" name="campground[image]" placeholder="image url" value="<%=campground.image%>"><br>
                <textarea name="campground[description]" placeholder="description"><%= campground.description %></textarea><br>
                <button class="">Submit!</button>
            </form>
            <button class="back-btn"><a href="/campgrounds"> Go Back </a></button>
        </div>
    </div>
    <% include ../partials/footer %>